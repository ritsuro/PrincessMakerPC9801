AS	=	MASM
LK	=	OPTLINK
ASFLAGS	=	

FDTOOL.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

USERDISK.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

GETARG.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

DKFORM.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

MACLIB.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

SCWRT.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

IOBOX.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

DSKCGX.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

HVLINE.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

EFECT2.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

VRTEXT.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

WIDSET.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

DISKSET.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

MUSCOR.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

MOUSE.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

IOPORT.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

PAT32.OBJ	:	$*.ASM P32OFF.INC P32OFT.INC P32ON.INC P32ONT.INC
	$(AS) $(ASFLAGS) $*.ASM,$@;

MINTXT.OBJ	:	$*.ASM
	$(AS) $(ASFLAGS) $*.ASM,$@;

FDTOOL.COM	:	FDTOOL.OBJ GETARG.OBJ DKFORM.OBJ MACLIB.OBJ SCWRT.OBJ \
		IOBOX.OBJ USERDISK.OBJ DSKCGX.OBJ HVLINE.OBJ WIDSET.OBJ\
		EFECT2.OBJ VRTEXT.OBJ DISKSET.OBJ MUSCOR.OBJ MOUSE.OBJ\
		PAT32.OBJ MINTXT.OBJ IOPORT.OBJ
	$(LK) @LINKFILE
	COPY FDTOOL.COM \WORK
